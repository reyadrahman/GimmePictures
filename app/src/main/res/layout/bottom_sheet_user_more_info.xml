<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_round_shape"
    app:behavior_fitToContents="true"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/tag"
        android:layout_width="25dp"
        android:layout_height="3dp"
        android:layout_margin="@dimen/indent_16dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_16dp"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="@dimen/indent_8dp"
        android:padding="@dimen/indent_16dp"
        android:textSize="20sp"
        android:visibility="gone"
        app:drawableTint="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag"
        tools:text="Sumy, Ukraine"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_instagram"
        android:drawablePadding="@dimen/indent_8dp"
        android:padding="@dimen/indent_16dp"
        android:textSize="20sp"
        android:visibility="gone"
        app:drawableTint="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_location"
        tools:text="\@instagram"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_twitter"
        android:drawablePadding="@dimen/indent_8dp"
        android:padding="@dimen/indent_16dp"
        android:textSize="20sp"
        android:visibility="gone"
        app:drawableTint="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_instagram"
        tools:text="\@twitter"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>