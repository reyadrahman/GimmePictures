<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.photo.dialogs.PhotoOrderSelectionDialog">

    <View
        android:id="@+id/tag"
        android:layout_width="25dp"
        android:layout_height="3dp"
        android:layout_margin="@dimen/indent_16dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_description"
        style="@style/TextAppearance.JustNotes.Subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent_16dp"
        android:layout_marginTop="@dimen/indent_16dp"
        android:layout_marginEnd="@dimen/indent_16dp"
        android:text="@string/order_by"
        app:layout_constraintTop_toBottomOf="@id/tag" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/indent_16dp"
        app:layout_constraintTop_toBottomOf="@id/order_description" />

</androidx.constraintlayout.widget.ConstraintLayout>