<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GimmePictures.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.GimmePictures</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.GimmePictures" parent="Base.Theme">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="GimmePictures.TranslucentStatusBar" parent="Theme.GimmePictures">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="GimmePictures.ToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="GimmePictures.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

</resources>